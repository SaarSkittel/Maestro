<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="10dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="110dp"
            android:background="@color/black"
            android:layout_height="110dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/cell_img"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="writerName_TV"
                android:textColor="@color/black"
                android:id="@+id/cell_writerName_TV"/>
           <ScrollView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum fringilla quis erat ac dapibus. Integer condimentum augue ac sagittis sodales. Integer lacus dolor, porttitor in ipsum in, convallis hendrerit ligula. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia curae; Mauris id ultrices tortor. Proin blandit laoreet dolor, nec pellentesque nisi eleifend in. Duis quis ornare eros. Praesent eget efficitur ante. Nulla ac viverra arcu. Ut luctus mollis venenatis."
                android:id="@+id/cell_comment_TV"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/cell_rating_tv"
                   android:textSize="15sp"
                   android:text="rating"/>

           </ScrollView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>